{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["../common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
