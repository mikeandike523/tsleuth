{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["../common/*"]
    },
    "outDir": "./compiled",
    "strictNullChecks": true
  },
  "include": [
    "./**/*.ts",
    "../common/**/*.ts",
    "../client/src/lib/error-types.ts"
  ],
  "exclude": ["node_modules", "**/node_modules"]
}
